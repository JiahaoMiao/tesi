% Hyperlink packages

\RequirePackage{hyperref}               % Enable internal and external hyperlinks
\hypersetup{
    unicode=true,                   % Allow non-Latin characters in Acrobat’s bookmarks
    pdftoolbar=true,                % Show Acrobat’s toolbar
    pdfmenubar=true,                % Show Acrobat’s menu
    pdffitwindow=false,             % Window does not fit to page when opened
    pdfstartview={FitH},            % Fits the width of the page to the window
    pdfnewwindow=true,              % Links open in new PDF window
    colorlinks=true,                % Colored links
    linkcolor=blue,                 % Color of internal links
    citecolor=green,                % Color of links to bibliography
    filecolor=cyan,                 % Color of file links
    urlcolor= blue                % Color of external links
}
